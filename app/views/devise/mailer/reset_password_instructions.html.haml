  %table{:align => "center", :bgcolor => "#f6f8f1", :border => "0", :cellpadding => "0", :cellspacing => "0"}
    %tr
      %td
        %table.content{:align => "center", :bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0",style: " width: 70%;margin-left:15%;margin-right:15%"}
          %tr
            %td.header{:bgcolor => "#c7d8a7", style: "padding: 40px 30px 20px 30px"}
              %table{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "70"}
                %tr
                  %td{:height => "70", :style => "padding: 0 20px 20px 0;"}
              %table.col425{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "width: 100%; max-width: 425px;"}
                %tr
                  %td{:height => "70"}
                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                      %tr
                        %td.h1{:style => "padding: 5px 0 0 0;color: #153643; font-family: sans-serif; font-size: 33px; line-height: 38px;font-weight: bold;"}
                          DAKAR-CLICK
          %tr
            %td.innerpadding.borderbottom{style: "padding: 30px 30px 30px 30px"}
              %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.h2{ style: "color: #153643; font-family: sans-serif;padding: 0 0 15px 0; font-size: 24px; line-height: 28px; font-weight: bold;"}
                    Cher/Chère "#{@email}"
                %tr
                  %td.bodycopy{style: "color: #153643; font-family: sans-serif"}
                    %p
                      Hello #{@resource.email}!
                    %p Quelqu'un a demandé un lien pour changer votre mot de passe. Vous pouvez le faire via le lien ci-dessous.
                    %p= link_to 'Changer mon mot de passe', edit_password_url(@resource, reset_password_token: @token)
                    %p Si vous ne l'avez pas demandé cela, s'il vous plaît ignorer cet e-mail.
                    %p Votre mot de passe ne changera pas jusqu'à ce que vous accédez au lien ci-dessus et de créer un nouveau.
          %tr
            %td.footer{:bgcolor => "#44525f",style: "padding: 20px 30px 15px 30px"}
              %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tr
                  %td.footercopy{:align => "center", style: "font-family: sans-serif; font-size: 14px; color: #ffffff;"}
